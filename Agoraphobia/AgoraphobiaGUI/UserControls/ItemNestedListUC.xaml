<UserControl x:Class="AgoraphobiaGUI.UserControls.ItemNestedListUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="Black" BorderBrush="White" BorderThickness="1" CornerRadius="5">
        <StackPanel Orientation="Horizontal" x:Name="NestedLists">
            <Border MouseLeftButtonDown="CloseList" HorizontalAlignment="Right" BorderBrush="White" BorderThickness="1" CornerRadius="5">
                <TextBlock Margin="5">Close</TextBlock>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
