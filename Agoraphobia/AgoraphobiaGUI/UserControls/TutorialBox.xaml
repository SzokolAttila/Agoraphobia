             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="15" Background="Black" Height="Auto" Width="Auto" MaxWidth="300" BorderBrush="White" BorderThickness="2" CornerRadius="10">
        <Grid>
            <TextBlock TextWrapping="WrapWithOverflow" x:Name="textField" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">This is some tutorial text here!</TextBlock>
        </Grid>
    </Border>
</UserControl>
