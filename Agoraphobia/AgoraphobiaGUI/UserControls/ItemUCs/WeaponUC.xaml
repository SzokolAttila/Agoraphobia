<UserControl x:Class="AgoraphobiaGUI.UserControls.ItemUCs.WeaponUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls.ItemUCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseEnter="HoverStart" MouseLeave="HoverEnd" MouseLeftButtonDown="UseWeapon">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" x:Name="Name"></TextBlock>
        <TextBlock Grid.Column="1" x:Name="Min"></TextBlock>
        <TextBlock Grid.Column="2" x:Name="Max"></TextBlock>
        <TextBlock Grid.Column="3" x:Name="Energy"></TextBlock>
    </Grid>
</UserControl>
