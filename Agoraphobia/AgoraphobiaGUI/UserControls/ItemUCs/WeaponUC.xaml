<UserControl x:Class="AgoraphobiaGUI.UserControls.ItemUCs.WeaponUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls.ItemUCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseEnter="HoverStart" MouseLeave="HoverEnd">
    <UniformGrid Rows="1" HorizontalAlignment="Stretch">
        <TextBlock Margin="3" TextTrimming="CharacterEllipsis" x:Name="Name"></TextBlock>
        <TextBlock Margin="3" TextTrimming="CharacterEllipsis" x:Name="Min"></TextBlock>
        <TextBlock Margin="3" TextTrimming="CharacterEllipsis" x:Name="Max"></TextBlock>
        <TextBlock Margin="3" TextTrimming="CharacterEllipsis" x:Name="Energy"></TextBlock>
        <TextBlock x:Name="Qty" Margin="3" TextTrimming="CharacterEllipsis" Visibility="Collapsed"></TextBlock>
    </UniformGrid>
</UserControl>
