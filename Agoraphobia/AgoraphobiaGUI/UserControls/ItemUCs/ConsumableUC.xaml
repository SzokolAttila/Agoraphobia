<UserControl x:Class="AgoraphobiaGUI.UserControls.ItemUCs.ConsumableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls.ItemUCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseEnter="HoverStart" MouseLeave="HoverEnd">
    <UniformGrid Rows="1" HorizontalAlignment="Stretch">
        <TextBlock Margin="3" x:Name="Name"/>
        <TextBlock Margin="3" x:Name="Energy"/>
        <TextBlock Margin="3" x:Name="Hp"/>
        <TextBlock Margin="3" x:Name="Defense"/>
        <TextBlock Margin="3" x:Name="Attack"/>
        <TextBlock Margin="3" x:Name="Sanity"/>
        <TextBlock Margin="3" x:Name="Duration"/>
    </UniformGrid>
</UserControl>
