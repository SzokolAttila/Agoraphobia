<UserControl x:Class="AgoraphobiaGUI.UserControls.ItemUCs.ArmorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgoraphobiaGUI.UserControls.ItemUCs"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="130" MouseEnter="HoverStart" MouseLeave="HoverEnd">
    <UniformGrid Rows="1" HorizontalAlignment="Stretch">
        <TextBlock x:Name="Name" Margin="3" TextTrimming="CharacterEllipsis"></TextBlock>
        <TextBlock x:Name="Hp" Margin="3" TextTrimming="CharacterEllipsis"></TextBlock>
        <TextBlock x:Name="Defense" Margin="3" TextTrimming="CharacterEllipsis"></TextBlock>
        <TextBlock x:Name="Type" Margin="3" TextTrimming="CharacterEllipsis"></TextBlock>
    </UniformGrid>
</UserControl>
